<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'Update user' %>

<h1>Update your information</h1>

<% @user=current_user %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' , object: f.object%>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :category, 'Select your category' %>
        <%= f.select :category, [ ['Taster','Taster'],['Chef','Chef'] ] %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, 'Confirmation' %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit 'Save changes', class: 'btn btn-primary btn-lg' %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Change</a>

  </div>
</div>