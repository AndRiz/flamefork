<% # linked to the create action in the Mail controller %>
<%= form_for(@user.mails.build(receiver_id: current_user.id),remote: true) do |f| %>
    <% # the hidden field contains the information needed for sending a mail %>


    <div><%= f.hidden_field :receiver_id %></div>
    <div><%= f.text_area :message, :placeholder => "Write a private message to #{@user.name}" %></div>

    <%= f.submit 'Send', class: 'btn btn-large btn-primary' %>
<% end %>



